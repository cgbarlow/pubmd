{
  "extends": "../../Cline-Recursive-Chain-of-Thought-System-CRCT-/tsconfig.json", // Extends the root tsconfig
  "compilerOptions": {
    "outDir": "./dist/esm", // Output directory for ES Module files
    "rootDir": "./src", // Source files directory
    "module": "NodeNext", // Set module to NodeNext
    "moduleResolution": "nodenext", // Use Node.js module resolution for ES modules
    "declaration": false, // Declaration files are already generated by the main build
    "declarationDir": null
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist", "**/*.test.ts"] // Exclude tests and other non-source files
}