{
  "extends": "../../Cline-Recursive-Chain-of-Thought-System-CRCT-/tsconfig.json", // Extends the root tsconfig
  "compilerOptions": {
    "outDir": "./dist/cjs", // Output directory for CommonJS files
    "rootDir": "./src", // Source files directory
    "module": "nodenext", // Allow import.meta.url, Node.js handles CJS/ESM output resolution
    "moduleResolution": "nodenext", // Align with module setting
    "declaration": true, // Generate .d.ts files
    "declarationDir": "./dist/types", // Output directory for declaration files
    "types": ["node"] // Explicitly include node types
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist", "**/*.test.ts"] // Exclude tests and other non-source files
}